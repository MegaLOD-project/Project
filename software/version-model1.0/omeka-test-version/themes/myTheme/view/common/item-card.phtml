<?php
// item-card.phtml
$item = $this->item; // Receberá o item dinamicamente
?>

<div class="item-card">
  <!-- Exibir Thumbnail -->
  <?php if ($thumbnail = $this->thumbnail($item, 'square')): ?>
    <div class="item-thumbnail">
      <?= $thumbnail ?>
    </div>
  <?php else: ?>
    <img src="https://via.placeholder.com/100x100" alt="Placeholder">
  <?php endif; ?>

  <!-- Exibir Metadados do Item -->
  <div class="item-metadata">
    <!-- Exibir Título -->
    <h3><?= $item->displayTitle() ?></h3>

    <!-- Exibir Material (dbo:material) -->
    <?php if ($material = $item->value('dbo:material')): ?>
      <p class="item-material"><strong>Material:</strong> <?= $material ?></p>
    <?php endif; ?>

    <!-- Exibir Direitos (dcterms:rights) -->
    <?php if ($rights = $item->value('dcterms:rights')): ?>
      <p class="item-rights"><strong>Direitos:</strong> <?= $rights ?></p>
    <?php endif; ?>

    <!-- Exibir Criador (dcterms:creator) -->
    <?php if ($creator = $item->value('dcterms:creator')): ?>
      <p class="item-creator"><strong>Criador:</strong> <?= $creator ?></p>
    <?php endif; ?>

    <!-- Exibir Tema (dcterms:subject) -->
    <?php if ($subject = $item->value('dcterms:subject')): ?>
      <p class="item-subject"><strong>Tema:</strong> <?= $subject ?></p>
    <?php endif; ?>

    <!-- Exibir Abrangência Temporal (dcterms:temporal) -->
    <?php if ($temporal = $item->value('dcterms:temporal')): ?>
      <p class="item-temporal"><strong>Abrangência Temporal:</strong> <?= $temporal ?></p>
    <?php endif; ?>
  </div>
</div>
